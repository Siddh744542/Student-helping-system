<%- include("header") -%> 
<div class="add-room-form">
    <form action="/reviews" method="post">
        <h1 class="heading-color">Give your Review</h1>
        <div class="form-group">
            <label for="review">Review :</label>
            <textarea class="form-control" id="review" name="review" rows="5" placeholder="Please type your review here..."></textarea>
        </div>
        <div class="form-group">
            <label for="name">Name :</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
        </div>
        <button type="submit" class="btn btn-secondary button">Submit</button>
    </form>
</div>
<%- include("footer") -%>