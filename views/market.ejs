<%- include("header") -%> 
<div class="button-div">
    <form action="/addproduct" class="coaching-btn-form">
      <button type="submit" formaction="/addproduct" class="btn btn-secondary btn-lg button coaching-btn1">Add Products</button>
    </form>
</div>
<!-- cards -->
<div class="container">
  <div class="row mx-auto">
    <% for( let i = 0; i < product.length; i++ ) { %>
      <div class="col-xl-3 col-lg-4 col-md-6">
        <div class="card">
          <%var rand=Math.floor((Math.random() * 4)+1)%>
          <a href="/viewproduct?tag=<%=i%>&rand=<%=rand%>"><img src="products/<%=rand%>.jpg" class="card-img-top"></a>
          <div class="card-body">
            <h5 class="card-title"> Rs <%= product[i].price %></h5>
            <p class="card-text"> <%= product[i].condition %></p>
          </div> 
        </div>
      </div>    
    <% } %>
  </div>
</div>
<%- include("footer") -%>