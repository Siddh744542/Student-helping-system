<%- include("header") -%> 
<!-- Testimonials -->

<section id="testimonials">

    <div id="testimonial-carousel" class="carousel slide " data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item container-fluid active">
          <h2 class=" testimonial-text">
            I no longer have to knock doors to rent room. I've found the best room in the area on Student helping System.
          </h2>
          <em>Mayank, katra</em>
        </div>
        <div class="carousel-item container-fluid">
          <h2 class="testimonial-text">i used to ask friends to give advice on choosing Coaching, but with Student helping System i have found the best coaching for myself</h2>
          <em>Deepak, Teliyarganj</em>
        </div>
      </div>
     <button class="carousel-control-prev" type="button" data-target="#testimonial-carousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-target="#testimonial-carousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>

  </section>

  <!-- cards -->
  <div class="container">
    <div class="row mx-auto">
      <% for( let i = 0; i < 4; i++ ) { let j =Math.floor(Math.random()*jsondata.length)%>
        <div class="col-xl-3 col-lg-4 col-md-6">
          <div class="card">
            <img src="images/<%=Math.floor((Math.random() * 5)+1)%>.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"> <%= jsondata[j].name %></h5>
              <p class="card-text"> <%= jsondata[j].location %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"> <span class="bold">Rent:</span> <%= jsondata[j].rent %> </li>
              <li class="list-group-item"> <span class="bold">Contact:</span> <%= jsondata[j].contact %></li>
              <li class="list-group-item"> <span class="bold">Email:</span> <%= jsondata[j].email %></li>
            </ul>  
          </div>
        </div>    
      <% } %>
    </div>
  </div>
  
<%- include("footer") -%> 