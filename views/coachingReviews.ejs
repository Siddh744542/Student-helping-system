<%- include("header") -%> 
<div class="button-div">
    <form action="/addcoaching" class="coaching-btn-form">
      <button type="submit" formaction="/addcoaching" class="btn btn-secondary btn-lg button coaching-btn1">Add Coaching</button>
    </form>
</div>
<div class="coaching-list">
    <ul class="list-group">
        <% for( let i = 0; i < coachinglist.length; i++ ) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
               <a href="/viewcoaching?tag=<%=i%>"> <%= coachinglist[i].name %> </a>
                <span class="badge badge-primary badge-pill"> <%= coachinglist[i].rating %> </span>
            </li>
        <% } %>
    </ul>
</div>


